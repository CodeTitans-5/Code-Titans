<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfcfc"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
        style="@style/DashboardCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="8dp">

        <TextView
            style="@style/DashboardTitleTextStyle"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:text="UNT Marketplace"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardStyle"
                android:onClick="onClickSell">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:backgroundTint="@android:color/holo_purple"
                        android:src="@drawable/ic_baseline_add_24" />

                    <View style="@style/DashboardDividerStyle" />

                    <TextView
                        style="@style/DashboardTitleTextStyle"
                        android:text="Sell" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardStyle"
                android:onClick="onClickBuy">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:backgroundTint="@android:color/holo_purple"
                        android:src="@drawable/ic_baseline_shopping_cart_24" />

                    <View style="@style/DashboardDividerStyle" />

                    <TextView
                        style="@style/DashboardTitleTextStyle"
                        android:text="Buy" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardStyle"
                android:onClick="onClickEditInfo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:backgroundTint="@android:color/holo_purple"
                        android:src="@drawable/edit_white" />

                    <View style="@style/DashboardDividerStyle" />

                    <TextView
                        style="@style/DashboardTitleTextStyle"
                        android:text="Edit Info" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardStyle"
                android:onClick="onClickViewItems">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:backgroundTint="@android:color/holo_purple"
                        android:src="@drawable/ic_baseline_list_alt_24" />

                    <View style="@style/DashboardDividerStyle" />

                    <TextView
                        style="@style/DashboardTitleTextStyle"
                        android:text="View my items" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardStyle"
                android:onClick="onClickLogout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:backgroundTint="@android:color/holo_purple"
                        android:src="@drawable/ic_baseline_input_24" />

                    <View style="@style/DashboardDividerStyle" />

                    <TextView
                        style="@style/DashboardTitleTextStyle"
                        android:text="Logout" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</ScrollView>